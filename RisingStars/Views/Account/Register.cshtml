@model RegisterViewModel


<div class="container mx-auto">
    <div class="row login-form">

        <div class="bg-light col-md-4 rounded mt-5 prose ">
            <h2>Welcome to Rising Stars!</h2>
            <span class="text-muted mb-3">
                Please register to continue. We are excited to have you on board!
            </span>
            <form class="form-horizontal" asp-action="Register">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label class="control-label" asp-for="Email"></label>
                    <input class="input input-bordered w-full" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Password"></label>
                    <input class="input input-bordered w-full" asp-for="Password" type="password"/>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="ConfirmPassword"></label>
                    <input class="input input-bordered w-full" asp-for="ConfirmPassword" type="password" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="FirstName"></label>
                    <input class="input input-bordered w-full" asp-for="FirstName" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="LastName"></label>
                    <input class="input input-bordered w-full" asp-for="LastName" />
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Major"></label>
                    <input class="input input-bordered w-full" asp-for="Major" />
                    <span class="text-danger" asp-validation-for="Major"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="School"></label>
                    <input class="input input-bordered w-full" asp-for="School" />
                    <span class="text-danger" asp-validation-for="School"></span>
                </div>

                <span class="text-muted">
                    Already have an account? <a asp-action="Login" class="text-decoration-none">Login</a>
                </span>

                <div class="form-group mt-2">
                    <input type="submit" value="Register" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>