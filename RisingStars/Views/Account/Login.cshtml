@model LoginViewModel


<div class="hero min-h-screen bg-base-200">
    <div class="hero-content flex-col lg:flex-row-reverse">
        <div class="prose text-center lg:text-left">
            <h1 class="text-5xl font-bold">
                Welcome!
            </h1>
            <p class="pb-6">Rising Stars is a platform for young talents to showcase their skills and get discovered by the world.</p>
        </div>
        <div class="card shrink-0 w-full max-w-sm shadow-2xl bg-base-100">

            <form class="card-body" asp-action="Login" asp-controller="Account">

                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input asp-for="Email" class="input input-bordered" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Password</span>
                    </label>
                    <input asp-for="Password" type="password" class="input input-bordered" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-control mt-6">
                    <button class="btn btn-primary">Login</button>
                </div>
                <div class="form-control mt-6">
                    <span class="text-muted">Don't have an account? <a asp-action="Register" class="text-primary font-bold">Register</a></span>
                </div>
            </form>
        </div>
    </div>
</div>